<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.TextField?>

<VBox prefHeight="1000.0" prefWidth="1000.0" stylesheets="@styles/Timers_Style.css"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.screen_time_tracker.screen_time_tracker.Controller.Timers_Controller">
    <AnchorPane prefHeight="1000.0" prefWidth="1000.0" stylesheets="@styles/Timers_Style.css"
                xmlns="http://javafx.com/javafx/17.0.2-ea"
                xmlns:fx="http://javafx.com/fxml/1">

        <BorderPane prefHeight="1000.0" prefWidth="200.0" styleClass="border-left"
                    AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
            <left>
                <VBox spacing="10" styleClass="nav-bar">
                    <ImageView fx:id="imgview" fitHeight="100" fitWidth="200" preserveRatio="true"
                               styleClass="logo">
                        <Image url="@images/temp_logo.png"/>
                    </ImageView>
                    <Button fx:id="Homebtn" onAction="#OnHomebtnClick" styleClass="nav-button" text="Home">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                    <Button fx:id="CurrentSessionPage" onAction="#OnCurrentSessionBtnClick" styleClass="nav-button"
                            text="Current Session">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                    <Button styleClass="nav-button" text="Old Sessions">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                    <Button fx:id="Recommendationspage" onAction="#OnRecommendationsPageClick"
                            styleClass="nav-button" text="Recommended">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                    <Button styleClass="nav-button" text="Goals">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                    <Button fx:id="TimersPage" onAction="#OnTimersButtonClick" styleClass="nav-button" text="Timers">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                    <Button styleClass="nav-button" text="Your Data">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                    <Button fx:id="settingsPage" onAction="#OnSettingsButtonClick" styleClass="nav-button"
                            text="Settings">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                </VBox>
            </left>
        </BorderPane>

        <HBox prefHeight="200.0" prefWidth="1000.0" styleClass="innerbox" AnchorPane.leftAnchor="200"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <BorderPane prefHeight="200.0" prefWidth="800.0" styleClass="border-top">
                <center>
                    <Label alignment="CENTER" prefHeight="74.0" prefWidth="502.0" text="Timers"
                           textAlignment="CENTER" BorderPane.alignment="CENTER">
                        <font>
                            <Font name="System Bold" size="51.0"/>
                        </font>
                    </Label>
                </center>
            </BorderPane>
        </HBox>

        <VBox prefHeight="724.0" prefWidth="700.0" alignment="CENTER" spacing="20"
              AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="200.0">

            <!-- Add Recommended Timers Section -->
            <BorderPane layoutX="571.0" layoutY="287.0" prefHeight="645.0" prefWidth="400.0" styleClass="border-radius">
                <top>
                    <VBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER">
                        <children>
                            <Label prefHeight="42.0" prefWidth="161.0" text="Add Recommended">
                                <font>
                                    <Font size="15.0"/>
                                </font>
                            </Label>
                            <Label prefHeight="42.0" prefWidth="161.0" text="Timers:">
                                <font>
                                    <Font size="15.0"/>
                                </font>
                            </Label>
                        </children>
                    </VBox>
                </top>
                <center>
                    <VBox prefHeight="645.0" prefWidth="335.0" BorderPane.alignment="CENTER">
                        <Label styleClass="info-text" text="Recommended Break times:"/>
                        <Label styleClass="info-text" text="Recommended End:"/>
                        <Label styleClass="info-text" text="Recommended Complete difficult task time:"/>
                    </VBox>
                </center>
            </BorderPane>

            <!-- Your Timers Section -->
            <BorderPane layoutX="219.0" layoutY="287.0" prefHeight="645.0" prefWidth="320.0" styleClass="border-radius">
                <top>
                    <VBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER">
                        <children>
                            <Label prefHeight="42.0" prefWidth="161.0" text="Your Timers:" fx:id="yourTimersLabel">
                                <font>
                                    <Font size="15.0"/>
                                </font>
                            </Label>
                        </children>
                    </VBox>
                </top>
                <center>
                    <VBox fx:id="yourTimersBox" prefHeight="645.0" prefWidth="335.0" alignment="CENTER">
                        <children>
                            <Button text="Add Timer +" styleClass="add-timer-button" onAction="#showAddTimerPopup"/>
                        </children>
                    </VBox>
                </center>
            </BorderPane>
        </VBox>
    </AnchorPane>
</VBox>






</VBox>
